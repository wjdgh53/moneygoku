# Database
DATABASE_URL="file:./dev.db"

# Alpha Vantage API (Market Data)
# Get your free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY="your_alpha_vantage_key_here"

# Alpaca Trading API (Paper Trading)
# ⚠️ IMPORTANT: Do NOT use NEXT_PUBLIC_ prefix - these are server-only!
# Get your keys at: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY="your_alpaca_api_key"
ALPACA_SECRET_KEY="your_alpaca_secret_key"
ALPACA_BASE_URL="https://paper-api.alpaca.markets"

# Next.js Authentication (Optional)
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Application (Public variables - safe for client)
NEXT_PUBLIC_APP_NAME="StockHero Clone"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# AI & News Analysis (Server-only)
# Tavily: https://tavily.com
TAVILY_API_KEY="your_tavily_key_here"

# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY="your_openai_key_here"
OPENAI_MODEL="gpt-4o-mini"

# Hugging Face: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY="your_huggingface_key_here"

# FMP (Financial Modeling Prep) - Analyst Ratings
# Get your free key at: https://site.financialmodelingprep.com/developer/docs
FMP_API_KEY="your_fmp_api_key_here"

# LangSmith Tracing (Optional)
# Sign up at: https://smith.langchain.com
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=MoneyGoku

# Vercel Cron Jobs Secret (Required for production)
# Generate a random secret: openssl rand -base64 32
CRON_SECRET="your_random_secret_here"